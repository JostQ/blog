{% extends 'base.html.twig' %}

{% block title %}Tags List!{% endblock %}

{% block body %}

    <table class="table table-dark">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Delete</th>
        </tr>
        {% for tag in tags %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ tag.name }}</td>
                <td>{{ include('tag/_delete_form.html.twig') }}</td>
            </tr>
        {% endfor %}
    </table>

    <div class="row justify-content-center"><a href="{{ path('tag_new') }}" class="btn btn-dark col-4">New tag</a></div>

{% endblock %}
